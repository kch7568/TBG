<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_margin="8dp"
    android:layout_marginBottom="5dp">

    <!-- 작성자 프로필 사진 및 정보 영역 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:gravity="start">

        <!-- 작성자 프로필 사진 -->
        <ImageView
            android:id="@+id/postAuthorProfileImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <!-- 작성자 닉네임 -->
            <TextView
                android:id="@+id/postAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="사용자 이름"
                android:textColor="#666666"
                android:textSize="14sp" />

            <!-- 댓글 내용 -->
            <TextView
                android:id="@+id/commentContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="댓글 내용이 여기에 표시됩니다.ddddddd"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="end">

            <!-- 작성일자 -->
            <TextView
                android:id="@+id/postCreateDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024-11-09 21:56:30"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginStart="8dp" />

            <!-- 댓글 수정 버튼 (작성자일 경우에만 노출) -->
            <ImageButton
                android:id="@+id/commentOptionsMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit"
                android:layout_marginStart="8dp"
                android:layout_gravity="end"
                android:background="@android:color/transparent"
                android:visibility="gone" /> <!-- 기본은 안 보임 -->

        </LinearLayout>
    </LinearLayout>

    <!-- 구분선 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD" />


</LinearLayout>
