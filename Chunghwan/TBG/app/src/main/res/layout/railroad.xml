<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RailroadActivity2">

    <LinearLayout
        android:id="@+id/railroad1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/back_key" />

        <android.widget.Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/layout_background_train3"
            android:text="왕복"
            android:textSize="6pt" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/train_icon" />

        <android.widget.Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/layout_background_train"
            android:text="편도"
            android:textSize="6pt" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/railroad2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/railroad1">

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"

            android:background="@drawable/layout_background_train4"
            android:padding="7dp"
            android:text="  출발지를 입력해주세요."
            android:textSize="7pt"
            android:textStyle="bold" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"

            android:background="@drawable/layout_background_train4"
            android:padding="7dp"
            android:text="  도착지를 입력해주세요."
            android:textSize="7pt"
            android:textStyle="bold" />

        <android.widget.Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/layout_background_train4"
            android:text="가는 날"
            android:textSize="6pt"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/railroad3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/railroad2">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KTX"
                android:textSize="5pt"
                android:layout_marginEnd="3dp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ITX-청춘"
                android:textSize="5pt"
                android:layout_marginEnd="3dp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="새마을호-ITX"
                android:textSize="5pt"
                android:layout_marginEnd="3dp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="누리호/무궁화호"
                android:textSize="5pt"
                android:layout_marginEnd="3dp"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/railroad4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/railroad3">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_background_train2"
            tools:ignore="UselessParent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="-50dp"
                android:padding="5dp"
                android:text="탑승객 :"
                android:textSize="8pt"
                android:textStyle="bold" />

            <Button
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"
                android:background="@drawable/minus_icon"
                android:backgroundTint="@color/white"/>

            <TextView
                android:layout_width="30dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:layout_marginStart="23dp"
                android:padding="7dp"
                android:text="1"
                android:textSize="8pt"
                android:textStyle="bold" />

            <Button
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginStart="45dp"
                android:background="@drawable/plus_icon"
                android:backgroundTint="@color/white"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="70dp"
                android:padding="5dp"
                android:text="명"
                android:textSize="8pt"
                android:textStyle="bold" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/railroad5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/railroad4">

        <ImageView
            android:layout_width="340dp"
            android:layout_height="290dp"
            android:background="@drawable/train_photo"
            android:layout_weight="1"
            tools:ignore="ContentDescription,Suspicious0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:text="다른 교통수단을 원하시면"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:textSize="7pt" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/railroad6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/railroad5">

        <TextView
            android:id="@+id/rail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#8380D0"
            android:layout_marginStart="20dp"
            android:text="고속버스"
            android:textSize="7pt"
            android:textStyle="bold" />

        <TextView
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="비행기"
            android:textColor="#8380D0"
            android:textSize="7pt"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/railroad7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/railroad6">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bus_icon"
            tools:ignore="ContentDescription,Suspicious0dp"
             />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/airport_icon"
            tools:ignore="ContentDescription,Suspicious0dp"
             />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>