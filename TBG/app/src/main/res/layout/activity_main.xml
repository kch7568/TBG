<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/tbg_backcolor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tbgicon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            app:srcCompat="@drawable/tbg_icon">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="로그인"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginTop="-15dp">
        </TextView>

        <EditText
            android:id="@+id/idText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/layout_background"
            android:drawableStart="@drawable/login_icon"
            android:drawableLeft="@drawable/login_icon"
            android:hint="아이디 입력"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="#41C2FA" />

        <EditText
            android:inputType="textPassword"
            android:id="@+id/passwordText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/layout_background"
            android:drawableStart="@drawable/password_icon"
            android:drawableLeft="@drawable/password_icon"
            android:hint="비밀번호 입력"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="#41C2FA" />

        <TextView
            android:id="@+id/findid"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="70dp"
            android:layout_marginTop="10dp"
            android:text="비밀번호를 잊으셨나요?"
            android:textColor="#FFFFFF"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:id="@+id/registerButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="70dp"
            android:layout_marginTop="10dp"
            android:text="회원가입"
            android:textColor="#FFFFFF"
            android:textStyle="bold">
        </TextView>

        <android.widget.Button
            android:id="@+id/LoginButton"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/layout_background_bluecolor"
            android:text="로그인"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold">

        </android.widget.Button>

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="또는"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold">
        </TextView>

        <ImageView
            android:id="@+id/google"
            android:layout_width="195dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            app:srcCompat="@drawable/googlelink">
        </ImageView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>




