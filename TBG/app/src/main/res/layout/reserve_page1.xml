<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReservePage1Activity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/reserve_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tbg_backcolor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/reserve_2"
            android:orientation="horizontal">

            <Button
                android:layout_width="40dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/back_key" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="광주 - 서울"
                android:textStyle="bold"
                android:textSize="8pt"/>

        <TextView
            android:id="@+id/startDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="가는날"
            android:textSize="7pt"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="189dp"
            tools:layout_editor_absoluteY="27dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/reserve_2"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5pt"
            app:layout_constraintTop_toBottomOf="@+id/reserve_1"
            android:orientation="vertical"
            android:background="@drawable/layout_background_train3"
            >
            
            <TextView
                android:id="@+id/reserve_t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3pt"
                android:text="ITX새마을 | 무궁화호"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="9pt"
                android:textStyle="normal"
                />

            <TextView
                android:id="@+id/reserve_t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5pt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reserve_t1"
                android:text="0000.00.00(0)"
                android:textSize="7pt"/>

            <TextView
                android:id="@+id/reserve_t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reserve_t2"
                android:text="오전 0 : 00 ~ 오후 0 : 00"
                android:textSize="7pt"/>

            <TextView
                android:id="@+id/reserve_t4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reserve_t3"
                android:text="광주 송정 -> 용산"
                android:textSize="6pt"/>


    </androidx.constraintlayout.widget.ConstraintLayout>>

        <LinearLayout
            android:id="@+id/reserve_3"
            android:layout_width="165pt"
            android:layout_height="170dp"
            android:layout_marginTop="5pt"
            app:layout_constraintTop_toBottomOf="@+id/reserve_2"
            android:orientation="vertical"
            android:background="@drawable/layout_background_train3"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="3pt"
                android:layout_marginLeft="50pt"
                android:text="ITX새마을 | 무궁화호"
                android:textSize="9pt"
                android:textStyle="normal"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5pt"
                android:layout_marginLeft="25pt"
                android:text="2024.09.19(목)"
                android:textSize="7pt"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10pt"
                android:text="오전 9 : 16 ~ 오후 1 : 29"
                android:textSize="7pt"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10pt"
                android:text="₩105,970"
                android:textSize="13pt"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/reserve_4"
            android:layout_width="165pt"
            android:layout_height="170dp"
            android:layout_marginTop="5pt"
            app:layout_constraintTop_toBottomOf="@+id/reserve_3"
            android:orientation="vertical"
            android:background="@drawable/layout_background_train3"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="3pt"
                android:layout_marginLeft="50pt"
                android:text="ITX새마을 | 무궁화호"
                android:textSize="9pt"
                android:textStyle="normal"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5pt"
                android:layout_marginLeft="25pt"
                android:text="2024.09.19(목)"
                android:textSize="7pt"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10pt"
                android:text="오전 9 : 16 ~ 오후 1 : 29"
                android:textSize="7pt"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10pt"
                android:text="₩105,970"
                android:textSize="13pt"/>


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="45pt"
            app:layout_constraintTop_toBottomOf="@+id/reserve_4"
            android:text="....아래로 슬라이드...."
            android:textSize="7pt"
            android:textStyle="bold"/>

    </androidx.constraintlayout.widget.ConstraintLayout>