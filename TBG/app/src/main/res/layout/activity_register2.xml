<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/tbg_backcolor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.widget.Button
            android:id="@+id/backspace"
            android:layout_width="39dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/back_key"></android.widget.Button>

        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="553dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/layout_background_stroke">

            <TextView
                android:layout_width="180dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="40dp"
                android:shadowColor="#80000000"

                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="5"
                android:text="아이디 및
                  비밀번호 찾기"

                android:textSize="25dp"
                android:textStyle="bold">

            </TextView>

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:srcCompat="@drawable/register2"
                android:layout_margin="20dp">
            </ImageView>

            <FrameLayout
                android:layout_width="270dp"
                android:layout_height="330dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/layout_background_stroke2"
                android:fadingEdge="vertical">


                <TextView
                    android:layout_width="220dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="10dp"
                    android:text="겪고 있는 문제에 대하여"
                    android:textSize="22dp"
                    android:textStyle="bold"></TextView>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="90dp"
                    android:layout_gravity="left"
                    android:layout_margin="30dp"
                    app:srcCompat="@drawable/kakao_icon"></ImageView>

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="60dp"
                    android:text="카카오톡 ID : youjin3184"
                    android:textSize="17dp"></TextView>

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="120dp"
                    android:text="OR"
                    android:textSize="17dp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="180dp"
                    android:text="010-3811-7568"
                    android:textSize="17dp"></TextView>

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="25dp"
                    android:layout_gravity="right"
                    android:layout_margin="180dp"
                    app:srcCompat="@drawable/phone_icon">

                </ImageView>

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="230dp"
                    android:text="문의 해주시길 바랍니다."
                    android:textSize="17dp"></TextView>

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="278dp"
                    android:text="관리자의 지시에 잘 응해주세요."
                    android:textColor="#818181"
                    android:textSize="13dp">

                </TextView>


            </FrameLayout>

        </FrameLayout>
        <TextView
            android:id="@+id/go_loginpage"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="로그인 화면으로 가기"
            android:textColor="#8380D0"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>
    </LinearLayout>




    </LinearLayout>