<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 출발 및 도착 정보 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- 출발 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- 출발지 -->
                <TextView
                    android:id="@+id/departureLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="4dp" />

                <!-- 출발 항공사 로고 -->
                <ImageView
                    android:id="@+id/departureLogo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="출발 항공사 로고"
                    android:layout_gravity="center_horizontal" />

                <!-- 출발 항공사 이름 -->
                <TextView
                    android:id="@+id/departureAirlineName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_marginTop="4dp" />

                <!-- 출발 공항 이름 (회색 글씨) -->
                <TextView
                    android:id="@+id/departureAirport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@android:color/darker_gray"
                    android:gravity="center"
                    android:layout_marginTop="2dp"
                    android:text="출발 공항" /> <!-- 여기에 실제 공항명을 넣으면 됩니다 -->

                <!-- 출발 날짜 -->
                <TextView
                    android:id="@+id/departureDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_marginTop="4dp" />

                <!-- 출발 시간 -->
                <TextView
                    android:id="@+id/departureTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <!-- 도착 -->
            <LinearLayout
                android:id="@+id/arrivalSection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- 도착지 -->
                <TextView
                    android:id="@+id/arrivalLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="4dp" />

                <!-- 도착 항공사 로고 -->
                <ImageView
                    android:id="@+id/arrivalLogo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="도착 항공사 로고"
                    android:layout_gravity="center_horizontal" />

                <!-- 도착 항공사 이름 -->
                <TextView
                    android:id="@+id/arrivalAirlineName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_marginTop="4dp" />

                <!-- 도착 공항 이름 (회색 글씨) -->
                <TextView
                    android:id="@+id/arrivalAirport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@android:color/darker_gray"
                    android:gravity="center"
                    android:layout_marginTop="2dp"
                    android:text="도착 공항" /> <!-- 여기에 실제 공항명을 넣으면 됩니다 -->

                <!-- 도착 날짜 -->
                <TextView
                    android:id="@+id/arrivalDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_marginTop="4dp" />

                <!-- 도착 시간 -->
                <TextView
                    android:id="@+id/arrivalTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- 가격 정보 -->
        <TextView
            android:id="@+id/flightPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
