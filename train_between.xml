<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/traffic_background"
    android:orientation="vertical"
    tools:context=".TrainBetweenActivity">

    <LinearLayout
        android:id="@+id/train_between_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/back_key" />

        <android.widget.Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/layout_background_train"
            android:text="왕복"
            android:textSize="6pt" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/train_icon" />

        <android.widget.Button
            android:id="@+id/train_go_onewayBtn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/layout_background_train3"
            android:text="편도"
            android:textSize="6pt" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/train_between_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/train_between_1">

        <EditText
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="8dp"
            android:background="@drawable/layout_background_train4"
            android:padding="7dp"
            android:hint="  출발지를 입력해주세요."
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="7pt" />

        <Button
            android:id="@+id/train_between_startDay"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="13dp"
            android:layout_marginStart="-45dp"
            android:background="@drawable/calendar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/train_between_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/train_between_2">

        <EditText
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="8dp"
            android:background="@drawable/layout_background_train4"
            android:padding="7dp"
            android:hint="  도착지를 입력해주세요."
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="7pt" />

        <Button
            android:id="@+id/train_between_arriveDay"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="-45dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/calendar" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/train_between_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/train_between_3">

        <android.widget.Button
            android:id="@+id/train_between_Startcalendar"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_gravity="center|top"
            android:layout_marginStart="55dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/layout_background_train4"
            android:text="가는 날"
            android:textSize="6pt"
            android:textStyle="bold" />

        <android.widget.Button
            android:id="@+id/train_between_Arrivecalendar"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10pt"
            android:background="@drawable/layout_background_train4"
            android:text="오는 날"
            android:textSize="6pt"
            android:textStyle="bold" />

        <android.widget.Button
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10pt"
            android:background="@drawable/serch_icon" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/train_between_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/train_between_4">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:text="KTX"
                android:textSize="5pt"
                android:layout_marginEnd="3dp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ITX-청춘"
                android:textSize="5pt"
                android:layout_marginEnd="3dp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="새마을호-ITX"
                android:textSize="5pt"
                android:layout_marginEnd="3dp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="누리호/무궁화호"
                android:textSize="5pt"
                android:layout_marginEnd="3dp"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/train_between_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/layout_background_train2"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/train_between_5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="120dp"
            android:padding="5dp"
            android:text="탑승객 :"
            android:textSize="8pt"
            android:textStyle="bold" />

        <Button
            android:id="@+id/train_between_minusBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:background="@drawable/minus_icon"
            android:backgroundTint="@color/white"/>

        <TextView
            android:id="@+id/train_between_tv_count"
            android:layout_width="30dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:padding="7dp"
            android:text="0"
            android:textSize="8pt"
            android:textStyle="bold" />

        <Button
            android:id="@+id/train_between_addBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:background="@drawable/plus_icon"
            android:backgroundTint="@color/white"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="명"
            android:textSize="8pt"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/train_between_7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/train_between_6">

        <ImageView
            android:layout_width="340dp"
            android:layout_height="290dp"
            android:background="@drawable/train_photo"
            android:layout_weight="1"
            tools:ignore="ContentDescription,Suspicious0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:text="@string/text1"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:textSize="7pt" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/train_between_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/train_between_7">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#8380D0"
            android:layout_marginStart="20dp"
            android:text="고속버스"
            android:textSize="7pt"
            android:textStyle="bold" />

        <TextView
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="비행기"
            android:textColor="#8380D0"
            android:textSize="7pt"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/train_between_9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/train_between_8">

        <ImageView
            android:id="@+id/go_busBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bus_icon"
            tools:ignore="ContentDescription,Suspicious0dp"
            />

        <ImageView
            android:id="@+id/go_airportBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/airport_icon"
            tools:ignore="ContentDescription,Suspicious0dp"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>