<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/traffic_background"
    tools:context=".TrainOnewayActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="100">

        <android.widget.Button
            android:id="@+id/backspace"
            android:layout_width="39dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/back_key"></android.widget.Button>

        <android.widget.Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/layout_background_train3"
            android:text="편도" />

        <android.widget.Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/layout_background_train"
            android:text="왕복" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="-160dp"
            android:layout_marginTop="23dp"
            app:srcCompat="@drawable/train_icon" />

        <TextView
            android:layout_width="330dp"
            android:layout_height="38dp"
            android:layout_marginLeft="-190dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/layout_background_train2"
            android:padding="7dp"
            android:text="   출발지를 입력해주세요."
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="330dp"
            android:layout_height="38dp"
            android:layout_marginLeft="-330dp"
            android:layout_marginTop="115dp"
            android:background="@drawable/layout_background_train2"
            android:padding="7dp"
            android:text="    도착지를 입력해주세요."
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="138dp"
            android:layout_height="35dp"
            android:layout_marginLeft="-230dp"
            android:layout_marginTop="170dp"
            android:background="@drawable/layout_background_train2"
            android:padding="5dp"
            android:text="           가는 날"
            android:textSize="15dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="-170dp"
            app:srcCompat="@drawable/serch_icon"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-365dp"
            android:layout_marginTop="210dp"
            android:layout_marginRight="30dp"
            android:text="KTX / KTX 산천"
            android:textSize="5pt" />

        <RadioButton
            android:layout_width="33dp"
            android:layout_height="20dp"
            android:layout_marginLeft="-30dp"
            android:layout_marginTop="210dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="210dp"
            android:text="ITX-청춘"
            android:textSize="5pt" />

        <RadioButton
            android:layout_width="33dp"
            android:layout_height="20dp"
            android:layout_marginTop="210dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="210dp"
            android:text="새마을호"
            android:textSize="5pt" />

        <RadioButton
            android:layout_width="33dp"
            android:layout_height="20dp"
            android:layout_marginLeft="-2dp"
            android:layout_marginTop="210dp" />

        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="210dp"
            android:text="누리호/무궁화호"
            android:textSize="5pt" />

        <RadioButton
            android:layout_width="33dp"
            android:layout_height="20dp"
            android:layout_marginLeft="-3dp"
            android:layout_marginTop="210dp" />
    </LinearLayout>

    <TextView
        android:layout_width="390dp"
        android:layout_height="35dp"
        android:layout_marginLeft="-400dp"
        android:layout_marginTop="255dp"
        android:background="@drawable/layout_background_train2"
        android:padding="5dp"
        android:text="                          탑승객 :                          명"
        android:textSize="16dp"
        android:textStyle="bold" />

    <android.widget.Button
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="-225dp"
        android:layout_marginTop="255dp"
        android:background="@drawable/layout_background_circle">
    </android.widget.Button>

    <android.widget.Button
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="255dp"
        android:background="@drawable/layout_background_circle">
    </android.widget.Button>

    <TextView
        android:layout_width="33dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-50dp"
        android:layout_marginTop="257dp"
        android:text="1"
        android:textSize="10pt"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:layout_gravity="center"
        android:layout_marginLeft="-240dp"
        android:layout_marginTop="100dp"
        app:srcCompat="@drawable/airport_photo"></ImageView>

    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-270dp"
        android:layout_marginTop="630dp"
        android:text="다른 교통수단을 원하시면"
        android:textStyle="bold"
        android:textSize="5pt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-120dp"
        android:layout_marginTop="650dp"
        android:text="철도"
        android:textSize="5pt"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="650dp"
        android:text="고속버스"
        android:textSize="5pt"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/train_icon"
        android:layout_width="53dp"
        android:layout_height="42dp"
        android:layout_marginLeft="-130dp"
        android:layout_marginTop="680dp"
        android:background="@drawable/train2_icon">
    </ImageView>

    <ImageView
        android:id="@+id/bus_icon"
        android:layout_width="53dp"
        android:layout_height="42dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="680dp"
        android:background="@drawable/bus_icon">
    </ImageView>

</LinearLayout>